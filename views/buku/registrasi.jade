extends ../default

block content
  
  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])

      h2(class=['ui', 'header', 'blue', 'dividing'])= 'Registrasi Buku'

      div(class='form-registrasi')
         form(class=['ui', 'form'] action='http://localhost:3000/tambahbuku' method='post')
           div(class=['ui', 'field'])
             label(for='nama')= 'Nama Buku'
             input(type= 'text' name='nama' placeholder='Nama ')
           div(class=['ui', 'field'])
              label(for='pengarang')= 'Pengarang'
              input(type= 'text' name='pengarang' placeholder='Pengarang')
           div(class=['ui', 'field'])
              label(for='stok')= 'Stok'
              input(type= 'text' name='stok' placeholder='Stok')
           button(class=['ui', 'button', 'basic', 'black'])= 'Tambah Buku'   
           div(class=['ui', 'message', 'error'])

        if info != undifined
          div(class=['ui', 'message', 'icon'])
            i(class=['close', 'icon'])
            div(class='header')= 'Data Berhasil disimpan!'
            p= info

  script(src='/javascripts/validation.js')




           
        